{
    "mcpServers": {
      "Galaxy": {
        "command": "uv",
        "args": [
          "run",
          "--with",
          "bioblend",
          "--with",
          "mcp[cli]",
          "--with",
          "requests",
          "mcp",
          "run",
          "<path to mcp server main script>",
        ],
        "env": {
          "GALAXY_URL": "https://usegalaxy.eu/",
          "GALAXY_API_KEY": "<your galaxy api key>"
        }
      }
    }
  }